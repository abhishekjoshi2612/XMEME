{
  "openapi": "3.0.0",
  "info": {
    "title": "Xmeme",
    "description": "Optional multiline or single-line description in [CommonMark](http://commonmark.org/help/) or HTML.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Used for fetching memes"
    }
  ],
  "paths": {
    "/memes": {
      "post": {
        "summary": "add a meme.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/meme"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON object giving id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/memeresponsepost"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "fetch latest memes.",
        "responses": {
          "200": {
            "description": "list of json responses containing meme,id and url",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getmeme"
                }
              }
            }
          }
        }
      }
    },
    "/memes/{userid}": {
      "get": {
        "summary": "to get json info about a id",
        "parameters": [
          {
            "id": "userid",
            "in": "path",
            "required": true,
            "description": "The ID of the user that data client want",
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1,
              "maximum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Id's Json data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int64",
                      "example": 4
                    },
                    "name": {
                      "type": "string",
                      "example": "Hari"
                    },
                    "url": {
                      "type": "string",
                      "example": "pixels.com/alliswell.jpeg"
                    },
                    "caption": {
                      "type": "string",
                      "example": "happy days ahead"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "to update json info about a id",
        "parameters": [
          {
            "id": "userid",
            "in": "path",
            "required": true,
            "description": "The ID of the user that data client want",
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1,
              "maximum": 1
            }
          }
        ],
        "requestBody": {
          "description": "contains url and caption",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/patchmemes"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Id's Json data.",
            "content": {
              "application/json": {
                "example": 200
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "meme": {
        "properties": {
          "name": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "url",
          "caption"
        ]
      },
      "memeresponsepost": {
        "properties": {
          "id": {
            "type": "integer"
          }
        },
        "required": "-id"
      },
      "getmeme": {
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": "-id -name -caption -url"
      },
      "patchmemes": {
        "properties": {
          "caption": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": "-caption -url"
      }
    }
  }
}
